{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/Dockerfile"
  },
  "deploy": {
    "startCommand": "sh /railway-entrypoint.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "APP_ENV": "production",
        "APP_TITLE": "Flowndly",
        "TELEMETRY_ENABLED": "false",
        "PROTOCOL": "https",
        "PORT": "3000",
        "WORKER": "false"
      }
    }
  },
  "services": [
    {
      "name": "flowndly-web",
      "type": "web",
      "dockerfilePath": "docker/Dockerfile",
      "startCommand": "sh /railway-entrypoint.sh",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10,
      "environments": {
        "production": {
          "variables": {
            "NODE_ENV": "production",
            "APP_ENV": "production",
            "APP_TITLE": "Flowndly",
            "TELEMETRY_ENABLED": "false",
            "PROTOCOL": "https",
            "PORT": "3000",
            "WORKER": "false"
          }
        }
      }
    },
    {
      "name": "flowndly-postgres",
      "type": "database",
      "databaseType": "postgresql",
      "version": "14"
    },
    {
      "name": "flowndly-redis",
      "type": "database",
      "databaseType": "redis",
      "version": "7.0"
    }
  ]
}
