{
    "name": "flowndly",
    "version": "1.0.0",
    "description": "Flowndly - Workflow Automation Platform",
    "main": "packages/backend/src/server.js",
    "scripts": {
        "start": "cd packages/backend && yarn start",
        "dev": "cd packages/backend && yarn dev",
